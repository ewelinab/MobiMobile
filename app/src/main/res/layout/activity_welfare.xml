<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eb.project.WelfareActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Id studenta" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:fontFamily="helvetica-light"
        android:text="@string/textWelfareTitle"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/buttonWalfareCancel"
        android:id="@+id/welfareCancelButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick"
        android:layout_alignParentStart="false"
        android:background="@drawable/button_border_welfare"/>

    <TextView
        android:id="@+id/availableNumberWelfareTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/availableNumberWelfareTitle"
        android:textAlignment="center"
        android:layout_above="@+id/availableNumberWelfare"
        android:layout_alignStart="@+id/availableNumberWelfare"
        android:layout_marginBottom="26dp"
        android:layout_alignEnd="@+id/availableNumberWelfare" />

    <TextView
        android:id="@+id/availableNumberWelfare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#B34db6ac"
        android:padding="10dp"
        android:text="@string/availableNumberWelfare"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        android:textSize="50sp"
        android:layout_above="@+id/currentNumberWelfareTitle"
        android:layout_alignStart="@+id/currentNumberWelfareTitle"
        android:layout_marginBottom="27dp"
        android:layout_alignEnd="@+id/currentNumberWelfareTitle" />

    <TextView
        android:id="@+id/currentNumberWelfareTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CurrentNumberWelfareTitle"
        android:textAlignment="center"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/currentNumberWelfare"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/currentNumberWelfare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="#929292"
        android:text="@string/currentNumberWelfare"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        android:textSize="50sp"
        android:padding="10dp"
        android:layout_above="@+id/welfareCancelButton"
        android:layout_alignStart="@+id/currentNumberWelfareTitle"
        android:layout_alignEnd="@+id/currentNumberWelfareTitle" />

    <Button
        android:id="@+id/approveButtonWelfare"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_border_welfare"
        android:onClick="onClick"
        android:text="@string/approveButtonWelfare" />

</RelativeLayout>
